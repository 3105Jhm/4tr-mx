<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/titlebarbackground"
        android:orientation="horizontal"
        android:paddingRight="20dp">

        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dip"
            android:layout_weight="1.5">

            <TextView
                android:id="@+id/text_title1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/main_title_pressed"
                android:gravity="center_vertical"
                android:text="全部股票"
                android:textColor="@color/blue"
                android:textSize="16dip" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_title2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/main_title_pressed"
                android:gravity="center_vertical"
                android:text="最新价"
                android:textColor="@color/blue"
                android:textSize="16dip" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/text_title3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@drawable/main_title_pressed"
                android:gravity="center_vertical"
                android:text="涨跌幅"
                android:textColor="@color/blue"
                android:textSize="16dip" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/linebackground" />
</FrameLayout>